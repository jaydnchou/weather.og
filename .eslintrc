{
	"extends": "airbnb",
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"parserOptions": {
		"ecmaVersion": 6,
		"ecmaFeatures": {
			"jsx": true
		},
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
		"no-console": "off",
		"indent": [
				"error",
				2
		],
		"quotes": [
				"error",
				"single"
		],
		"semi": [
				"error",
				"always"
		],
		"react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
	}
}